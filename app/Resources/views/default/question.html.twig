{% extends 'base.html.twig' %}

{% block title %}Testhub &mdash; вопрос теста{% endblock title %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets "%kernel.root_dir%/Resources/css/default_question.css" %}
    <link rel="stylesheet" href="{{ asset_url }}">
  {% endstylesheets %}
{% endblock stylesheets %}

{% block body %}
  <section class="question-container col-md-8 col-sm-12">
    <h1>Вопрос:</h1>
    <article class="question-description">{{ question.getDescription() }}</article>
    {% if question.getType() is same as('text') %}
      {% include 'default/text_question.html.twig' %}
    {% elseif question.getType() is same as('decimal') %}
      {% include 'default/text_question.html.twig' %}
    {% elseif question.getType() is same as('single') %}
      {% include 'default/variant_question.html.twig' %}
    {% elseif question.getType() is same as('multiple') %}
      {% include 'default/variant_question.html.twig' %}
    {% endif %}
  </section>
{% endblock body %}
